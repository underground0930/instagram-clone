<!--Main Navigation-->
<header>

  <!-- Navbar -->
  <nav id="main-navbar" class="navbar navbar-expand-lg navbar-light bg-white">
    <!-- Container wrapper -->
    <div class="container-fluid" style="max-width:1080px;">
      <!-- Right links -->
      <ul class="navbar-nav ms-auto d-flex align-items-center flex-row">
        <% if logged_in? %>
          <li>
            <%= link_to '投稿', new_post_path, class: 'btn btn-success btn-lg' %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle hidden-arrow d-flex align-items-center" href="#" id="navbarDropdownMenuLink" role="button" data-mdb-toggle="dropdown" aria-expanded="false">
              <%= render 'users/avatar', user: current_user %>
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink">
              <li><%= link_to 'My profile', mypage_account_edit_path, class: 'dropdown-item' %></li>
              <li><%= link_to 'Logout', :logout, class: 'dropdown-item', data: { turbo_method: :delete, turbo_confirm: 'ログアウトしていいですか？' } %></li>
            </ul>
          </li>
          <li class="nav-item input-group">
            <a href="#">
              <i class="fas fa-bell"></i>
              <span class="badge rounded-pill badge-notification bg-danger">11</span>
            </a>
          </li>
        <% else %>
          <li class="nav-item dropdown me-3">
            <%= link_to 'Login', :login, class: 'nav-link' %>
          </li>
          <li class="nav-item dropdown">
            <%= link_to 'SignUp', :signup, class: 'nav-link' %>
          </li>
        <% end %>
        <li class="input-group rounded">
          <a role="button" class="input-group-text border-0" id="search-addon" data-mdb-toggle="modal" data-mdb-target="#exampleModal">
            <i class="fas fa-search"></i>
          </a>
        </li>
      </ul>
    </div>
